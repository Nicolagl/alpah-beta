.cart-phonenum{
  text-align: right;
}

.coupons {
  box-sizing: border-box;
}

.user-coupons-text {
  color: red;
  text-align: right;
}


.cart-shop-img {
  width: 200rpx;
  height: 200rpx;
}

.cart-shop-title {
  font-size: 40rpx;
  font-weight: bold;
}
.cart-shop-select-info{
  font-weight: bold;
  font-size: 35rpx;
  color: rgb(0, 0, 0);
}
.cart-shop-price{
  
  font-size: 35rpx;
  color: red;
}
.cart-count-option{
  align-items: right;
    font-size: 40rpx;
    border:  darkgray solid 1rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;

}

.cart-shop-list {
  margin-bottom: 0rpx;
  
  background-color: rgba(255, 213, 25, 0.897);
  
    
}
.cart-shop-list:hover,
.cart-shop-list:focus {
    box-shadow: inset 0 -6px 0 hsla(0,0%,0%,.25),
                0 0 6px hsla(0,0%,0%,.25);
    margin-top: -1px;
    padding-bottom: 16px;
}
.cart-shop-list:active {
    box-shadow: inset 0 -2px 0 hsla(0,0%,0%,.25),
                0 0 2px hsla(0,0%,0%,.25);
    margin-top: 3px;
    padding-bottom: 12px;
}

.ui-flex ui-padding-10 {
  margin-bottom: 0rpx;
  
  background-color: rgba(61, 107, 233, 0.897);
  
    
    border: none;
    border-radius: 5px;
    box-shadow: inset 0 -5px 0 hsla(0,0%,0%,.25),
                0 0 5px hsla(0,0%,0%,.25);
    color: hsla(0,0%,0%,.75);
    cursor: pointer;
    font: bold 16px/1 sans-serif;
    padding: 10px 25px 15px;
    position: relative;
    text-shadow: 0 1px 1px hsla(0,0%,100%,.5);
}
.ui-flex ui-padding-10:hover,
.ui-flex ui-padding-10:focus {
    box-shadow: inset 0 -6px 0 hsla(0,0%,0%,.25),
                0 0 6px hsla(0,0%,0%,.25);
    margin-top: -1px;
    padding-bottom: 16px;
}
.ui-flex ui-padding-10:active {
    box-shadow: inset 0 -2px 0 hsla(0,0%,0%,.25),
                0 0 2px hsla(0,0%,0%,.25);
    margin-top: 3px;
    padding-bottom: 12px;
}
